{
  "name": "harbour-ramp-app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "buf": "npm run buf:sync && npm run buf:generate && npm run buf:clean",
    "buf:clean": "rm -rf proto && npx prettier --write ./src/harbour/gen",
    "buf:generate": "buf generate && sed -i '' s/_pb.js/_pb/ src/harbour/gen/*/v1/public_*.ts",
    "buf:sync": "rm -rf proto && rm -rf _tmp && mkdir -p proto/ramp/v1/ && git clone --depth 1 git@github.com:harbour-tech/be-ramp-service.git _tmp && mv _tmp/proto/ramp/v1/public.proto proto/ramp/v1/ && rm -rf _tmp",
    "build": "tsc && vite build",
    "build:staging": "tsc && vite build --mode staging",
    "dev": "vite",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "start": "vite"
  },
  "dependencies": {
    "@bufbuild/protobuf": "^1.8.0",
    "@bugsnag/browser-performance": "^2.6.0",
    "@bugsnag/js": "^7.23.0",
    "@bugsnag/plugin-react": "^7.22.7",
    "@connectrpc/connect": "^1.4.0",
    "@connectrpc/connect-web": "^1.4.0",
    "@metamask/providers": "^16.0.0",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tabs": "^1.0.4",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "lucide-react": "^0.368.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.2.2",
    "tailwindcss": "^3.4.3",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@bufbuild/connect-web": "^0.13.0",
    "@bufbuild/protobuf": "^1.6.0",
    "@bufbuild/protoc-gen-connect-web": "^0.11.0",
    "@bufbuild/protoc-gen-es": "^1.6.0",
    "@types/node": "^20.12.7",
    "@types/react": "^18.2.79",
    "@types/react-dom": "^18.2.25",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "postcss": "^8.4.38",
    "typescript": "^5.4.5",
    "vite": "^5.2.9",
    "vite-plugin-svgr": "^4.2.0"
  }
}
